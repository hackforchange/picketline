<html>
<%= head %>
<body>
  <%= header %>
  
  <%= company[:name] %>
  
  <% if user_boycott_reason %>
    You are boycotting because <%= user_boycott_reason %>
  <% else %>
    <a href='/company/boycott/<%= company[:name] %>'>Boycott!</a>
  <% end %>
  
  <div id='boycotts'>
  <% boycotts.each do |b| %>
    <div>
      <%= b[1] %> people are boycotting because <%= b[0] %>
    </div>
  <% end %>
  </div>
  
</body>
</html>
