<html>
<%= head %>
<body>
  <div id='page'>
    <%= header %>
  
    Search for a company:
    <form method='get' action='/company/search'>
    <input name='term'/>
    <input type='submit' name='Submit' />
    </form>

    <% if results %>
      <div id='results'>
        <% results.each do |company| %>
          <a href='/company/sunlight/<%= company["id"] %>'> <%= company["name"] %> </a>
          <br/>
        <% end %>
      </div>
    <% end %>

    <div>
      Cant find the company you are looking for? 

      <a href='/company/create'>Add it</a>
    </div>
  </div>

</body>
</html>
